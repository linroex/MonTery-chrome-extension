{
    "manifest_version": 2,

    "name": "Monstery",
    "description": "電力快要不夠了嘛？讓 Monstery 提醒你該省點電囉！",
    "version": "0.1.2",

    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "notifications",
        "geolocation",
        "storage",
        "http://montery.ntust.me/"
    ],
    "background": {
        "scripts": ["js/jquery-2.1.4.min.js", "js/function.js", "js/background.js"]
    },
    "web_accessible_resources": [
        "images/icon.png",
        "js/jquery-2.1.4.min.js"
    ],
    "content_security_policy": "script-src 'unsafe-eval' https://maps.googleapis.com/ https://maps.gstatic.com; object-src 'self'"
}