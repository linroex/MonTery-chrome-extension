{
    "manifest_version": 2,

    "name": "MonTery",
    "description": "電力快要不夠了嘛？讓 MonTery 提醒你該省點電囉！",
    "version": "0.0.1",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "notifications",
        "geolocation"
    ],
    "background": {
        "scripts": ["jquery-2.1.4.min.js", "function.js", "background.js"]
    },
    "web_accessible_resources": [
        "icon.png",
        "jquery-2.1.4.min.js"
    ],
    "content_security_policy": "script-src 'unsafe-eval' https://maps.googleapis.com/ https://maps.gstatic.com; object-src 'self'"
}